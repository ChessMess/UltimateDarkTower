{
    "name": "ultimatedarktower",
    "version": "2.1.1",
    "description": "This library provides functions to communicate with the bluetooth le enabled Tower that comes with Restoration Games Return To Dark Tower board game.",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "module": "dist/src/index.js",
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "import": "./dist/src/index.js",
            "require": "./dist/src/index.js"
        }
    },
    "sideEffects": false,
    "files": [
        "dist/src/**/*",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ],
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --write \"src/**/*.{ts,js}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js}\"",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist coverage",
        "watch": "tsc -watch",
        "build": "npm run clean && npm run type-check && tsc && npm run build:examples",
        "build:examples": "node build-examples.js",
        "dev": "npm run watch",
        "ci": "npm run lint && npm run type-check && npm run test:ci && npm run build",
        "prepack": "npm run ci",
        "prepublishOnly": "npm run prepack",
        "publish:check": "npm run ci",
        "size": "npm run build && du -sh dist/",
        "example:node": "npx ts-node examples/node/NodeExample.ts"
    },
    "keywords": [
        "ReturnToDarkTower",
        "BLE",
        "BoardGame",
        "Tower",
        "RestorationGames",
        "UltimateDarkTower",
        "bluetooth",
        "ble",
        "restoration-games"
    ],
    "author": "Chris Koerner-Zeller",
    "license": "MIT",
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/chessmess"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/chessmess/UltimateDarkTower.git"
    },
    "bugs": {
        "url": "https://github.com/chessmess/UltimateDarkTower/issues"
    },
    "homepage": "https://github.com/chessmess/UltimateDarkTower#readme",
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=7.0.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11"
    ],
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "@stoprocent/noble": "^2.0.0"
    },
    "peerDependenciesMeta": {
        "@stoprocent/noble": {
            "optional": true
        }
    },
    "devDependencies": {
        "@stoprocent/noble": "^2.3.10",
        "@types/jest": "^29.5.12",
        "@types/node": "^24.0.12",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "esbuild": "^0.20.2",
        "eslint": "^8.45.0",
        "jest": "^29.7.0",
        "prettier": "3.0.3",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.2.2"
    }
}
